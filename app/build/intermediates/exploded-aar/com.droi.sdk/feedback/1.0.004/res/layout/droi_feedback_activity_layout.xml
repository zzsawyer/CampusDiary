<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/droi_feedback_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#34b1e7"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/droi_feedback_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="#00ffffff"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:scaleType="center"
            android:src="@drawable/droi_feedback_back_arrow" />

        <TextView
            android:id="@+id/droi_feedback_topbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/droi_feedback_topbar_title_text"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/droi_feedback_submit_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="#00ffffff"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:scaleType="center"
            android:src="@drawable/droi_feedback_write_feedback" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/droi_feedback_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3" />

</LinearLayout>